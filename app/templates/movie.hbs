<h2 style="margin:20px">Trending</h2>
<div class="container">
  {{#each model.trending as |trending|}}

    {{#paper-card as |card|}}

      <img {{action "transitionToDetails" trending}}
        src="https://image.tmdb.org/t/p/w500/{{trending.poster_path}}"
        style="width:20vw; height:50vh" alt="" title={{trending.title}} />

      {{#paper-button raised=true primary=true onClick=(action 'addToFavourites' trending)}}Add to Favourites{{/paper-button}}

    {{/paper-card}}

  {{/each}}

</div>

<h2 style="margin:20px">Upcoming</h2>
<div class="container">
  {{#each model.upcoming as |upcoming|}}

    {{#paper-card as |card|}}

      <img {{action "transitionToDetails" upcoming}}
        src="https://image.tmdb.org/t/p/w500/{{upcoming.poster_path}}"
        style="width:20vw; height:50vh" alt="" title={{upcoming.title}} />

      {{#paper-button raised=true primary=true onClick=(action 'addToFavourites' upcoming)}}Add to Favourites{{/paper-button}}

    {{/paper-card}}

  {{/each}}

</div>

{{outlet}}


